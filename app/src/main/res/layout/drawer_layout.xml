<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/size_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_font"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_toRightOf="@+id/size_icon"
            android:typeface="serif"
            android:textColor="@color/DodgerBlue"
            android:id="@+id/text_size"
            android:textSize="17sp"
            android:text="Text size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:typeface="serif"
            android:textColor="@color/Teal"
            android:layout_marginRight="20dp"
            android:id="@+id/text_size_indicator"
            android:textSize="17sp"
            android:text="19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_toRightOf="@+id/size_icon"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/font_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_font_type"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/font_icon"
            android:typeface="serif"
            android:textColor="@color/DodgerBlue"
            android:id="@+id/text_font"
            android:textSize="17sp"
            android:text="Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/text_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/color_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_colors"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/color_icon"
            android:typeface="serif"
            android:textColor="@color/DodgerBlue"
            android:id="@+id/color_font"
            android:textSize="17sp"
            android:text="Text color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/color_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/share_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_share"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:typeface="serif"
            android:textColor="@color/DodgerBlue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/share_icon"
            android:textSize="17sp"
            android:text="Share essay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/drive_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_drive"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:typeface="serif"
            android:textColor="@color/DodgerBlue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/drive_icon"
            android:textSize="17sp"
            android:text="Upload to Google Drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/LightGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/delete_icon"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_delete_circle"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:typeface="serif"
            android:textColor="@color/Red"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/delete_icon"
            android:textSize="17sp"
            android:text="Delete essay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>