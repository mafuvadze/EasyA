<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <RelativeLayout
            android:background="@color/Gold"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_centerHorizontal="true"
                android:text="Essay Analysis"
                android:textSize="23sp"
                android:textColor="@color/DodgerBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/words"
                android:text="Words: 907"
                android:layout_below="@+id/title"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sent"
                android:text="Sentences: 35"
                android:layout_below="@+id/words"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/level"
                android:text="Writing Level: College Graduate"
                android:layout_below="@+id/sent"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/use"
                android:text="Most Used Word: Evil"
                android:layout_below="@+id/level"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/grade"
                android:text="Overall grade: A"
                android:layout_below="@+id/use"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/a"
                android:layout_below="@+id/grade"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />





        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>